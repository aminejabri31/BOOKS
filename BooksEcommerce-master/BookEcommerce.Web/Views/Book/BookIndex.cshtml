@model IEnumerable<BookEcommerce.Web.Models.BookDto>
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="texte-primary">Books List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="ProductCreate" class="btn-outline-primary">
                <i class="fas fa-plus"></i>
            </a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th> Title </th>
                <th> ISBN </th>
                <th> Price </th>
                <th>Description</th>
                
                <th>InStock</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td> @item.Title </td>
                    <td> @item.ISBN </td>
                    <td> @item.Price </td>
                    <td> @item.Description </td>
             
                    <td> @item.InStock </td>
                    <td>
                        <a asp-action="DeletBookAsync" class="btn btn-success" asp-route-productId="@item.Id">
                            <i class="fas fa-edit"></i>
                        </a>

                        <a asp-action="UpdateBookAsync" class="btn btn-danger" asp-route-productId="@item.Id">
                            <i class="fas fa-edit"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
