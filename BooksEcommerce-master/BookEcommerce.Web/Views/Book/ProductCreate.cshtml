@model BookEcommerce.Web.Models.BookDto

<from asp-action="ProductCreate">
    <div class="container border p-3">
        <h1 class="text-primary">Create Product</h1>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-2">
            <label asp-for="Title" class="control-label pt-2"
                   style="font-size:20px;"></label>
        </div>
        <div class="col-10 pb-3">
            <input asp-for="Title" class="from-control" />
            <span asp-validation-for="Title" class="text-danger">

            </span>
        </div>
    
        <div class="col-2">
            <label asp-for="ISBN" class="control-label pt-2"
               style="font-size:20px;"></label>
        </div>
        <div class="col-10 pb-3">
            <input asp-for="ISBN" class="from-control" />
            <span asp-validation-for="ISBN" class="text-danger">

            </span>
        </div>
        <div class="col-2">
            <label asp-for="Description" class="control-label pt-2"
               style="font-size:20px;"></label>
        </div>
        <div class="col-10 pb-3">
            <input asp-for="Description" class="from-control" />
            <span asp-validation-for="Description" class="text-danger">

            </span>
        </div>
        
    
        <div class="col-2">
            <label asp-for="Price " class="control-label pt-2"
                style="font-size:20px;"></label>
        </div>
        <div class="col-10 pb-3">
            <input asp-for="Price" class="from-control" />
            <span asp-validation-for="Price" class="text-danger">

             </span>
        </div>
    
        <div class="col-2">
            <label asp-for="ImageURL " class="control-label pt-2"
                style="font-size:20px;"></label>
        </div>
        <div class="col-10 pb-3">
            <input asp-for="ImageURL" class="from-control" />
            <span asp-validation-for="ImageURL" class="text-danger">

            </span>
        </div>
    
        <div class="col-2">
            <label asp-for="ListCategories " class="control-label pt-2"
                style="font-size:20px;"></label>
        </div>
        <div class="col-10 pb-3">
            <input asp-for="ListCategories" class="from-control" />
            <span asp-validation-for="ListCategories" class="text-danger">

            </span>
        </div>
    
        <div class="col-2">
            <label asp-for="InStock " class="control-label pt-2"
                style="font-size:20px;"></label>
        </div>
        <div class="col-10 pb-3">
            <input asp-for="InStock" class="from-control" />
            <span asp-validation-for="InStock" class="text-danger">

            </span>
        </div>

        <div class="col-5 offset-2">
            <a asp-action="ProductIndex" class="btn-primary" btn from-control">Back To List </a>

        </div>
        <div class="col-5">
            <input type="submit" value="Create" class="btn btn-info from-control" />
        </div>
    </div>
</div>

</from>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}